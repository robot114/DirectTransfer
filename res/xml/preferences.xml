<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >
    <Preference
        android:icon="@drawable/target_download" 
        android:key="@string/prefKey_DownloadTarget" 
        android:title="@string/prefTitle_DownloadTarget" 
        android:summary="@string/prefSummary_DownloadTarget"/>
    <ListPreference
        android:icon="@drawable/max_download_thread"
        android:key="@string/prefKey_MaxTransferThread"
        android:title="@string/prefTitle_MaxTransferThread" 
